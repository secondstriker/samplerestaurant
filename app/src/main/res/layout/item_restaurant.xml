<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFoodRestaurntItem"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_restaurant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTitleRestaurntItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Rusti Tuscan Kitchen"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFoodRestaurntItem" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Free delivery"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/circle_shape"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewFoodRestaurntItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFoodRestaurntItem" />

        <TextView
            android:id="@+id/textViewCourseTypeRestaurntItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dessert, Healthy"
            app:layout_constraintStart_toStartOf="@+id/textViewTitleRestaurntItem"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleRestaurntItem" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="45-55 mins"
            app:layout_constraintStart_toEndOf="@+id/textViewCourseTypeRestaurntItem"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleRestaurntItem" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="No min"
            android:textColor="@color/green_600"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitleRestaurntItem" />

        <RatingBar
            android:id="@+id/ratingBarRestaurantItem"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:rating="4"
            android:stepSize="0.01"
            android:theme="@style/RatingBar"
            app:layout_constraintStart_toStartOf="@+id/textViewCourseTypeRestaurntItem"
            app:layout_constraintTop_toBottomOf="@+id/textViewCourseTypeRestaurntItem" />

        <TextView
            android:id="@+id/textViewRateRestaurantItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="77"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ratingBarRestaurantItem"
            app:layout_constraintStart_toEndOf="@+id/ratingBarRestaurantItem"
            app:layout_constraintTop_toTopOf="@+id/ratingBarRestaurantItem" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ratings"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRateRestaurantItem"
            app:layout_constraintStart_toEndOf="@+id/textViewRateRestaurantItem"
            app:layout_constraintTop_toTopOf="@+id/textViewRateRestaurantItem" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/grey_200"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="Offer valid on first order only"
            android:textColor="@color/purple_text"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBarRestaurantItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>